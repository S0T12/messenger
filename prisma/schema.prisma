generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Group {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  branch  String
  section String
  users   User[]   @relation
  userIds String[]
  @@unique([branch, section])
}

model User {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  userId     Int    @unique
  firstName String
  lastName  String
  branch    String
  section   String
  isBan     Boolean @default(false)
  group     Group?   @relation(fields: [groupId], references: [id]) 
  groupId   String? 
}
